{
  "name": "contract-scraper",
  "version": "1.0.0",
  "description": "A customisable data scraper for the web based on JSON contracts",
  "main": "dist/index",
  "typings": "dist/index",
  "directories": {
    "test": "test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "node_modules",
      "coverage",
      "test"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99
  },
  "scripts": {
    "test": "nyc mocha",
    "prepublishOnly": "npm run compile",
    "compile": "tsc -p .",
    "clean": "rm -rf dist",
    "watch": "tsc -w -p .",
    "lint": "tslint --project ./src/tslint.json",
    "lint-fix": "tslint --fix --project ./src/tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tamarasaurus/contract-scraper.git"
  },
  "keywords": [
    "scraper",
    "html",
    "web",
    "JSON"
  ],
  "author": "Tamara Robichet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tamarasaurus/contract-scraper/issues"
  },
  "homepage": "https://github.com/tamarasaurus/contract-scraper#readme",
  "dependencies": {
    "@types/expect": "^1.20.4",
    "@types/mocha": "^5.2.6",
    "cheerio": "^1.0.0-rc.2",
    "mocha": "^6.1.4",
    "puppeteer": "^1.14.0",
    "standard": "^12.0.1",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.3",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.1"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/src"
  ],
  "devDependencies": {
    "nyc": "^14.0.0",
    "source-map-support": "^0.5.12",
    "tslint": "^5.16.0"
  }
}
