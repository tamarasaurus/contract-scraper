{
  "name": "contract-scraper",
  "version": "2.0.0",
  "description": "A customisable data scraper for the web based on JSON contracts",
  "main": "dist/index",
  "typings": "dist/index",
  "directories": {
    "test": "test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist",
      "node_modules",
      "coverage",
      "test",
      "src/examples"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true,
    "check-coverage": true,
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90
  },
  "scripts": {
    "test": "rm -rf coverage && nyc mocha",
    "prepublishOnly": "npm run compile",
    "compile": "tsc -p .",
    "clean": "rm -rf dist",
    "watch": "tsc -w -p .",
    "lint": "tslint --project tslint.json",
    "lint-fix": "tslint --fix --project tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tamarasaurus/contract-scraper.git"
  },
  "keywords": [
    "scraper",
    "html",
    "web",
    "JSON"
  ],
  "author": "Tamara Robichet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tamarasaurus/contract-scraper/issues"
  },
  "homepage": "https://github.com/tamarasaurus/contract-scraper#readme",
  "dependencies": {
    "axios": "^0.19.2",
    "cheerio": "^1.0.0-rc.3",
    "cheerio-eq": "^1.0.1",
    "glob": "^7.1.3",
    "is-relative-url": "^3.0.0",
    "jschardet": "^2.1.0",
    "lodash.get": "^4.4.2",
    "puppeteer": "^3.0.0",
    "random-useragent": "^0.3.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/src"
  ],
  "devDependencies": {
    "@types/cheerio": "^0.22.11",
    "@types/expect": "^1.20.4",
    "@types/iconv": "^2.1.16",
    "@types/mocha": "^5.2.6",
    "@types/puppeteer": "^1.12.3",
    "@types/sinon": "^7.0.11",
    "mocha": "^6.2.3",
    "nyc": "^14.0.0",
    "sinon": "^7.3.2",
    "source-map-support": "^0.5.12",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.4.1"
  }
}
